<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/llSearchItemContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:background="@color/bright_foreground_light"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgProductView"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:layout_margin="@dimen/dp10"
            android:src="@drawable/loading"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/bright_foreground_disabled_holo_dark"
                android:textStyle="bold"
                android:maxLines="10"
                android:ellipsize="end"
                android:gravity="left"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="@dimen/dp120"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@color/bright_foreground_light">
                <TextView
                    android:id="@+id/txtSuitableView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="Suitable"
                    android:gravity="center_vertical|center"
                    android:background="@drawable/grey_black_border"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>