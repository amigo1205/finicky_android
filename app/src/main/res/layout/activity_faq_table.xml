<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_foreground_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp56"
            android:background="@color/green_app_color"
            android:orientation="horizontal"
            android:weightSum="7">

            <LinearLayout
                android:id="@+id/llGoToMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">

                <ImageView
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp30"
                    android:layout_gravity="center"
                    android:src="@drawable/navigation_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.8">

                <TextView
                    android:id="@+id/hometitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp20"
                    android:gravity="left|center_vertical"
                    android:text="FAQ"
                    android:textColor="@color/background_light"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBackArrow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp32"
                    android:layout_gravity="right|center"
                    android:src="@drawable/backicon" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp20"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llQuestionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp20"
                    android:text="General"
                    android:textSize="15sp"
                    android:textColor="@color/bright_foreground_disabled_holo_dark"/>
                <Spinner
                    android:id="@+id/spinCategory1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:overlapAnchor="false"
                    android:background="@color/green_app_color">
                </Spinner>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp20"
                    android:text="Specially"
                    android:textSize="15sp"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/bright_foreground_disabled_holo_dark"/>
                <Spinner
                    android:id="@+id/spinCategory2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/green_app_color"
                    android:overlapAnchor="false">
                </Spinner>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="Extremely"
                    android:textSize="15sp"
                    android:textColor="@color/bright_foreground_disabled_holo_dark"/>
                <Spinner
                    android:id="@+id/spinCategory3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:overlapAnchor="false"
                    android:background="@color/green_app_color">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llAnswerContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp20"
                android:background="@color/bright_foreground_disabled_holo_light"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvAnswerTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp20"
                    android:text="@string/termsOfService"
                    android:maxLines="500"
                    android:scrollbars="vertical"
                    android:textColor="@color/bright_foreground_dark"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>f
</LinearLayout>