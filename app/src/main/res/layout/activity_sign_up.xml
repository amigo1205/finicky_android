<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@color/background_light"
    tools:context=".SignUpActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"></LinearLayout>
    <EditText
        android:id="@+id/etuser_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:hint="Name"
        android:textColorHint="@color/bright_foreground_disabled_holo_dark"
        android:backgroundTint="@color/bright_foreground_disabled_holo_dark"
        android:textColor="@color/background_holo_dark"
        android:inputType="textPersonName"
        android:padding="10.0dip" />

    <EditText
        android:id="@+id/etuser_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:hint="Email"
        android:textColorHint="@color/bright_foreground_disabled_holo_dark"
        android:backgroundTint="@color/bright_foreground_disabled_holo_dark"
        android:textColor="@color/background_holo_dark"
        android:inputType="textEmailAddress"
        android:padding="10.0dip" />

    <EditText
        android:id="@+id/etuser_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:hint="Password"
        android:textColorHint="@color/bright_foreground_disabled_holo_dark"
        android:backgroundTint="@color/bright_foreground_disabled_holo_dark"
        android:textColor="@color/background_holo_dark"
        android:inputType="textPassword"
        android:padding="10.0dip" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>
    <Button
        android:id="@+id/bSignUp"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_margin="10.0dip"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@android:color/white" />

    <com.facebook.login.widget.LoginButton
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login_button"
        facebook:com_facebook_login_text = "Sign up with Facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_margin="10.0dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:weightSum="7">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/bright_foreground_disabled_holo_dark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/background_dark"
                android:textSize="16.0dip"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/bright_foreground_disabled_holo_dark"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bLogin"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginTop="20dp"
        android:layout_margin="10dip"
        android:background="@drawable/button_background"
        android:text="SIGN IN"
        android:textColor="@android:color/white" />
</LinearLayout>