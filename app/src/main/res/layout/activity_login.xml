<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@color/background_light"
    tools:context=".LoginActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </LinearLayout>
    <TextView
        android:id="@+id/tvIncorrectEmail"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:layout_margin="10.0dip"
        android:textColor="@color/holo_red_light" />

    <EditText
        android:id="@+id/etuseremail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:hint="Email"
        android:textColorHint="@color/bright_foreground_disabled_holo_dark"
        android:backgroundTint="@color/bright_foreground_disabled_holo_dark"
        android:textColor="@color/background_holo_dark"
        android:maxLength="50"
        android:padding="10.0dip"
        android:inputType="textEmailAddress"
        android:textSize="16.0sp" />

    <EditText
        android:id="@+id/etuserPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:hint="Password"
        android:textColorHint="@color/bright_foreground_disabled_holo_dark"
        android:backgroundTint="@color/bright_foreground_disabled_holo_dark"
        android:textColor="@color/background_holo_dark"
        android:inputType="textPassword"
        android:maxLength="50"
        android:padding="10.0dip"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="5.0dip"
        android:gravity="right"
        android:padding="10.0dip"
        android:text="Forgot Password"
        android:textColor="@color/background_dark"
        android:textSize="16.0dip" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"></LinearLayout>
    <Button
        android:id="@+id/bLogin"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_margin="10.0dip"
        android:background="@drawable/button_background"
        android:text="SIGN IN"
        android:onClick="goNextPage"
        android:textColor="@android:color/white" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10.0dip"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        app:com_facebook_login_text="Sign in with Facebook" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:weightSum="7">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/bright_foreground_disabled_holo_dark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/background_dark"
                android:textSize="16.0dip"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/bright_foreground_disabled_holo_dark"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bSignUp"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_margin="10dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:onClick="goNextPage"
        android:text="SIGN UP"
        android:textColor="@android:color/white" />
</LinearLayout>